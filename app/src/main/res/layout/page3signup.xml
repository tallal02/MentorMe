<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".page3signup">

    <!-- View that takes 2/3 of the screen -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#def8f8">
        <ImageView
            android:id="@+id/circleTop"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginStart="-100dp"
            android:alpha="0.5"
            android:background="@drawable/circle" />


        <ImageView
            android:id="@+id/circleLeft"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="-60dp"
            android:alpha="0.5"
            android:background="@drawable/circle" />

        <LinearLayout
            android:id="@+id/textContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="120dp"
            android:layout_marginLeft="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewMentor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mentor"
                android:fontFamily="@font/acme"
                android:textColor="#2EA7AE"
                android:textSize="44sp" />

            <TextView
                android:id="@+id/textViewMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="me"
                android:fontFamily="@font/acme"
                android:textColor="#FFC90A"
                android:textSize="44sp" />
        </LinearLayout>


    </FrameLayout>

    <!-- View that takes 1/3 of the screen -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="#50C2C9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Started!"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"/>


            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/editTextEmail"
                android:layout_marginTop="0dp"
                android:hint="Enter Name"
                android:layout_marginRight="16dp"
                android:background="@drawable/button_round"
                android:inputType="textPassword"
                android:padding="12dp" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"/>


            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/editTextEmail"
                android:layout_marginTop="0dp"
                android:hint="Enter Email"
                android:layout_marginRight="16dp"
                android:background="@drawable/button_round"
                android:inputType="textPassword"
                android:padding="12dp" />

            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Contact Number"
                android:textColor="@color/white"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"/>


            <EditText
                android:id="@+id/editTextContact"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/editTextEmail"
                android:layout_marginTop="0dp"
                android:hint="Enter Contact Number"
                android:layout_marginRight="16dp"
                android:background="@drawable/button_round"
                android:inputType="textPassword"
                android:padding="12dp" />


            <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country"
                android:textColor="@color/white"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"/>


            <EditText
                android:id="@+id/editTextCountry"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/editTextEmail"
                android:layout_marginTop="0dp"
                android:hint="Enter Country"
                android:layout_marginRight="16dp"
                android:background="@drawable/button_round"
                android:inputType="textPassword"
                android:padding="12dp" />

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Select City"
                android:textColor="@color/white"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"/>


            <EditText
                android:id="@+id/editTextCity"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/editTextEmail"
                android:layout_marginTop="0dp"
                android:hint="Enter City"
                android:layout_marginRight="16dp"
                android:background="@drawable/button_round"
                android:inputType="textPassword"
                android:padding="12dp" />

            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Password"
                android:textColor="@color/white"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"/>


            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/editTextEmail"
                android:layout_marginTop="0dp"
                android:hint="Enter Password"
                android:layout_marginRight="16dp"
                android:background="@drawable/button_round"
                android:inputType="textPassword"
                android:padding="12dp" />

            <TextView
                android:id="@+id/help_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Password must be at least 8 characters long"
                android:textColor="@color/white"
                android:textSize="10dp"
                tools:ignore="TextSizeCheck" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:id="@+id/signupButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"

                    android:paddingTop="5dp"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:paddingBottom="0dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="Signup"
                    android:textColor="#50C2C9"
                    tools:ignore="TypographyContrast" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/Signup_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Already have an account?"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/Login_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=" Log In"
                    android:textColor="#157177"
                    android:textSize="10dp"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
