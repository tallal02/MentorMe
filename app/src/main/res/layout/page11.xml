<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="#50C2C9"
    tools:context=".page6resetpassword">

    <TextView
        android:id="@+id/resetPasswordHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password?"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/instructionText"
        android:layout_below="@id/resetPasswordHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please type a new password and re-enter the password. Type something you will remember!"
        android:textColor="#666666"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/newPassword"
        android:layout_below="@id/instructionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter New Password"
        android:inputType="textPassword"
        android:background="#E0E0E0"
        android:padding="12dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_below="@id/newPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Re-enter Password"
        android:inputType="textPassword"
        android:background="#E0E0E0"
        android:padding="12dp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_below="@id/confirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reset_password"
        android:background="#299C6D"
        android:textColor="#FFFFFF"
        android:padding="12dp" />

    <TextView
        android:id="@+id/loginInsteadText"
        android:layout_below="@id/resetPasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't want to reset password? Login"
        android:textSize="16sp"
        android:textColor="#2196F3"
        android:layout_marginTop="16dp"
        android:gravity="center" />
</RelativeLayout>
